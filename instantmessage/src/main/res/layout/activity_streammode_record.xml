<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioActivities.FilemodeRecord"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_filerecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_streammodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello data"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/bt_streammodeRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/streamModeRecord"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bt_streammodePlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/streamModePlay"
        android:textColor="@android:color/white" />

</LinearLayout>